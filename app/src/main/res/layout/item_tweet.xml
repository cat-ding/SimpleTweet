<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="cattt28" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRelativeTime"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        tools:text="How are we preparing our #Artemis astronauts to explore the surface of the Moon? Beyond safe spacecraft and spacesuits, weâ€™re making sure they have the mobility, tools, and geology training needed to do science. Watch: https://youtu.be/pwHUbftMPvg" />

    <TextView
        android:id="@+id/tvRelativeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        tools:text="10 minutes ago" />

    <ImageView
        android:id="@+id/ivMedia"
        android:layout_width="300dp"
        android:layout_height="169dp"
        android:layout_below="@+id/tvBody"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnReply"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ivMedia"
        android:layout_alignStart="@+id/tvScreenName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/vector_compose_dm_fab"
        android:textSize="9sp" />

    <Button
        android:id="@+id/btnRetweet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ivMedia"
        android:layout_marginStart="73dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/btnReply"
        android:background="@drawable/ic_vector_retweet_stroke"
        android:textSize="9sp" />

    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ivMedia"
        android:layout_marginStart="73dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/btnRetweet"
        android:background="@drawable/ic_vector_heart_stroke"
        android:textSize="9sp" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ivMedia"
        android:layout_marginStart="73dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/btnFavorite"
        android:background="@drawable/ic_vector_messages_stroke"
        android:textSize="9sp" />

</RelativeLayout>